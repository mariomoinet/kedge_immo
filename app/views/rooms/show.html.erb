<div class="panel panel-default">
  <div class="panel-body">
    <!-- Carrousel -->
    <br>
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-12" id="carousel-container">
          <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <% if @photos %>
              <% @photos.each do |photo| %>
                <ol class="carousel-indicators">
                  <li data-target="#myCarousel" data-slide-to="<%= photo.id %>" class="active"></li>
                </ol>
              <% end %>
            <% end %>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
              <% if @photos %>
                <% @photos.each do |photo| %>
                  <div class="item <%= 'active' if photo.id == @photos[0].id %>">
                    <%= image_tag photo.image.url() %>
                  </div>
                <% end %>
              <% end %>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Précédent</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Suivant</span>
            </a>
          </div>
        </div>
      </div>
      <!-- Description -->
      <div class="row text-center ">
        <div class="col-md-12">
          <br>
          <p>A propos de cette colocation</p>
          <br>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= @room.summary %>
        </div>
      </div>
      <!-- petit icones d'information sur l'appartement-->
      <div class="row text-center ">
        <div class="col-md-12">
          <br><br>
          <div class="col-md-3">
            <i class="fa fa-home fa-2x"></i>
            <div class="row">
              <%= @room.home_type %>
            </div>
            <br>
            <i class="fa fa-arrows-alt fa-2x"></i>
            <div class="row">
              <%= @room.taille %>m2
            </div>
          </div>
          <div class="col-md-3">
            <i class="fa fa-users fa-2x"></i>
            <div class="row">
              <%= @room.nb_coloc %>
              <%= @room.nb_coloc > 1 ? "Colocataires au total" : "Colocataire au total" %>
            </div>
            <br>
            <i class="fa fa-bed fa-2x"></i>
            <div class="row">
              <%= @room.room_type %>
            </div>
            <br>
          </div>
          <div class="col-md-3">
            <i class="fa fa-bath fa-2x"></i>
            <div class="row">
              <%= @room.salle_bain %>
              <%= @room.salle_bain > 1 ? "Salles de bain" : "Salle de bain" %>
            </div>
            <br>
            <i class="fa fa-transgender fa-2x"></i>
            <div class="row">
              <%= @room.sexe %>
            </div>
          </div>
          <div class="col-md-3">
            <i class="fa fa-check fa-2x"></i>
            <div class="row">
              <%= @room.nb_place %>
              <%= @room.nb_place > 1 ? "Places disponibles" : "Place disponible" %>
            </div>
            <br>
            <i class="fa fa-file-text-o fa-2x"></i>
            <div class="row">
              Type de bail :
              <%= @room.bail %>
            </div>
          </div>
        </div>
      </div>

      <!-- Equipements -->
      <br>
      <div class="row text-center ">
        <div class="col-md-12">
          <br>
          <p>Equipements</p>
          <br>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-sm-3">
              <ul class="equipments">
                <li class="<%= 'text-line-through' if !@room.wifi %>">
                  <i class="fa fa-wifi" aria-hidden="true"></i>
                  Wifi</li>
                <li class="<%= 'text-line-through' if !@room.tv %>">
                  <i class="fa fa-television" aria-hidden="true"></i>
                  Télévision</li>
                <li class="<%= 'text-line-through' if !@room.machine_laver %>">
                  <i class="fa fa-superpowers" aria-hidden="true"></i>
                  Lave vaisselle</li>
              </ul>
            </div>
            <div class="col-sm-3">
              <ul class="equipments">
                <li class="<%= 'text-line-through' if !@room.ascenceur %>">
                  <i class="fa fa-arrows-v" aria-hidden="true"></i>
                  Ascenceur</li>
                <li class="<%= 'text-line-through' if !@room.terasse%>">
                  <i class="fa fa-tree" aria-hidden="true"></i>
                  Terrasse</li>
                <li class="<%= 'text-line-through' if !@room.seche_linge %>">
                  <i class="fa fa-superpowers" aria-hidden="true"></i>
                  Sèche linge</li>

              </ul>
            </div>
            <div class="col-sm-3">
              <ul class="equipments">
                <li class="<%= 'text-line-through' if !@room.lave_linge %>">
                  <i class="fa fa-superpowers" aria-hidden="true"></i>
                  Lave linge</li>
                <li class="<%= 'text-line-through' if !@room.four %>">
                  <i class="fa fa-fire" aria-hidden="true"></i>
                  Four</li>
              </ul>
            </div>
            <div class="col-sm-3">
              <ul class="equipments">
                <li class="<%= 'text-line-through' if !@room.piscine %>">
                  <i class="fa fa-sun-o" aria-hidden="true"></i>
                  Piscine</li>
                <li class="<%= 'text-line-through' if !@room.voiture %>">
                  <i class="fa fa-car" aria-hidden="true"></i>
                  Garage</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Google maps -->
      <div class="row text-center ">
        <div class="col-md-12">
          <br>
          <p>Emplacement</p>
          <br>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div id="map"></div>

          <style>
            #map {
              height: 400px;
              width: 100%;
              display: block;
              margin-left: auto;
              margin-right: auto;
            }
          </style>

          <script>
            function initMap() {
              var uluru = {
                lat: <%= @room.latitude %>,
                lng: <%= @room.longitude %>
              };
              var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 15,
                center: uluru
              });
              var marker = new google.maps.Marker({position: uluru, map: map});
            }
          </script>
          <script async="async" defer="defer" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBe5rEz5JLIUL5UWgRR6zbSlvM0aYkdf4k&callback=initMap"></script>
        </div>
      </div>
    </div>
    <!-- Formulaire de réservation -->
      <div class="col-md-4" id="sidebar">
          <%= render 'reservations/form' %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $("#sidebar").stick_in_parent();
</script>
