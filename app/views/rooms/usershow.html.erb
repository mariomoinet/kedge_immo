<div class="panel panel-default">

  <div class="panel-heading col-md-12">
    <div class="row">
      <div class="col-md-2" style="padding:18px">
        <%= link_to :back do %>
        <i class="fa fa-arrow-left fa-lg" aria-hidden="true" style="color:white"></i>
      <% end %>
    </div>
    <div class="col-md-8 text-center">
      <h3> Le coloc idéal pour <%= @room.listing_name %></h3>
    </div>
  </div>
</div>
<div class="panel-body">
<div class="col-md-7">
  <div class="row">
    <br>
    <p>Le coloc recherché</p>
    <br>
    <%= @room.summary%>
  </div>
  <div class="row">
    <br>

    <div class="col-md-5" style="background-color: red">
<br><br><br><br><br><br><br><br>
    </div>
    <div class="col-md-offset-1 col-md-5" style="background-color:blue">
<br><br><br><br><br><br><br><br>
    </div>
  </div>
  <div class="row">
    <br>

    <div class="col-md-5" style="background-color: green">
<br><br><br><br><br><br><br><br>
    </div>
    <div class="col-md-offset-1 col-md-5" style="background-color:pink">
<br><br><br><br><br><br><br><br>
    </div>
  </div>
</div>

  <!-- Formulaire de réservation -->
  <div class="col-md-offset-1 col-md-4" id="sidebar">
    <br>
    <%= render 'reservations/form' %>
  </div>
</div>
</div>


<script type="text/javascript">
$("#sidebar").stick_in_parent();
</script>
